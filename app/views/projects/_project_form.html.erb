<div class="activity_index_top_box">
  <h3>体験を編集</h3>
</div>
<div class="activity_index_activity_list_box">
  <%= form_for [@user, @project] do |form| %>
    <%= render 'layouts/error_messages', model: form.object %>
    <div class="user_show_info_items_box">
      <section class="form_section">
        <div class="form_big_title">
          <h3>Trip Project</h3>
          <div class="form_big_title_questionIcon baseInfo">
            <i class="far fa-question-circle"></i>
            <p class="fukidashi fukidashi_baseInfo">Project Name must be within 20 characters</p>
          </div>
        </div>
        <div class="form-group">
          <%= form.label "Project Name" %>
          <%= form.text_field :name, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label "Project Icon" %>
          <div class="project_icon_radio_box">
              <% project_icon_list = [
              'project_icon-01','project_icon-02','project_icon-03','project_icon-04','project_icon-05',
              'project_icon-06','project_icon-07','project_icon-08','project_icon-09','project_icon-10',
              ]%>
              <% project_icon_list.each_with_index do |icon, index| %>
                <%= form.radio_button :icon, icon, id: "project_icon_#{index}", class: 'project_icon_radio_btn hidden' %>
                <%= form.label index, image_tag("project_icons/#{icon}"), :for => "project_icon_#{index}" %>
              <% end %>
          </div>
        </div>
      </section>
      <section class="form_section">
        <div class="form_big_title">
          <h3>About Place</h3>
          <div class="form_big_title_questionIcon placeInfo">
            <i class="far fa-question-circle"></i>
            <p class="fukidashi fukidashi_placeInfo">吹き出しが表示されます吹き出しが表示されます吹き出しが表示されます吹き出しが表示されます吹き出しが表示されます</p>
          </div>
        </div>
        <%= form.fields_for :project_areas do |area| %>
          <div class="field">
            <%= render 'project_areas_fields', f: area %>
          </div>
        <%- end %>
        <div class="links">
          <%= link_to_add_association "Add Area", form, :project_areas, partial: 'project_areas_fields' %>
        </div>
        <!-- <div class="form-group">
          <div class="row">
            <div class="date_pick_box">
              <%#= form.label "Start Place" %>
              <%#= form.text_field :start_place, class: "form-control" %>
            </div>
            <div class="date_pick_box">
              <%#= form.label "End Place" %>
              <%#= form.text_field :end_place, class: "form-control" %>
            </div>
          </div>
        </div> -->
      </section>
      <section class="form_section">
        <div class="form_big_title">
          <h3>About Schedule</h3>
          <div class="form_big_title_questionIcon scheduleInfo">
            <i class="far fa-question-circle"></i>
            <p class="fukidashi fukidashi_scheduleInfo">吹き出しが表示されます吹き出しが表示されます吹き出しが表示されます吹き出しが表示されます吹き出しが表示されます</p>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="date_pick_box">
              <%= form.label "Start Date" %>
              <%= form.date_field :start_date, use_month_numbers: true, class: "form-control" %>
            </div>
            <div class="date_pick_box">
              <%= form.label "End Date" %>
              <%= form.date_field :start_date, use_month_numbers: true, class: "form-control" %>
            </div>
          </div>
        </div>
      </section>
      <section class="form_section">
        <div class="form_big_title">
          <h3>Invite Friends</h3>
          <div class="form_big_title_questionIcon inviteFriends">
            <i class="far fa-question-circle"></i>
            <p class="fukidashi fukidashi_inviteFriends">A Project can shared with 4 members</p>
          </div>
        </div>
        <div class="form-group invite_member_box">
          <div class="form_inner_form_title">Share with trip member</div>
          <div class="form_inner_form_box">
            <% if @members %>
              <% @members.each do |member| %>
              <span>Member</span>
              <input type="textbox" value="<%= User.find(member.user_id).email %>" name="invite_emails[member]" class="form-control">
              <% end %>
            <% end %>
            <% if @inviting_members %>
              <% @inviting_members.each do |inviting_member| %>
              <span>Member</span>
              <input type="textbox" value="<%= inviting_member.invited_email %>" name="invite_emails[member]" class="form-control">
              <% end %>
            <% end %>
            <% if @left_invite_num %>
              <% @left_invite_num.times do %>
                <span>Member</span>
                <input type="textbox" name="invite_emails[member]" class="form-control">
              <% end %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
    <div class="form_btns_box">
      <div id="form_btns">
        <div class="submit_btn_box">
          <% if action_name == "new" %>
            <%= form.submit('Create Projct',class: 'button btn-submit') %>
          <% else %>
            <%= form.submit('Create Projct',class: 'button btn-submit') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

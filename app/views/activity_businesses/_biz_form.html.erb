<!-- <form> -->
<div class="user_show_info_items_box">
  <div class="form-group">
    <%= form.label "事業名" %>
    <%= form.text_field :name, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label "事業画像" %>
    <%= form.file_field :profile_image, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label "事業紹介" %>
    <%= form.text_field :profile_text, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="row">
      <%= form.hidden_field :country_id, value: 105 %>
      <div class="col-half">
        <%= form.label "地域" %>
        <%# form.collection_select :state_id, State.all, :id, :local_name,{prompt: "地域を選択"}, required: true, class: "form-control" %>
        <%= form.select :state_id, {'北海道': 1}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
        <%# form.select :state_id, {'北海道': 1}, { class: 'form-control' , required: true } %>
      </div>
      <div class="col-half">
        <%= form.label "都道府県" %>
        <%# form.collection_select :prefecture_id, Prefecture.all, :id, :local_name,{prompt: "都道府県を選択"}, required: true, class: "form-control" %>
        <%= form.select :prefecture_id, {'北海道': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
        <%# form.select :prefecture_id, {'北海道': 2}, { class: 'form-control' , required: true } %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-half">
        <%= form.label "エリア" %>
        <%= form.collection_select :area_id, Area.all, :id, :local_name,{prompt: "エリアを選択"}, required: true, class: "form-control" %>
        <%# form.select :area_id, {'どここかのエリア': 2}, { class: 'form-control' , required: true } %>
      </div>
      <div class="col-half">
        <%= form.label "市町村" %>
        <%= form.collection_select :town_id, Town.all, :id, :jp_name,{prompt: "市町村を選択"}, required: true, class: "form-control" %>
        <%# form.select :town_id, {'札幌市': 2}, { class: 'form-control' , required: true } %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.label "以降の住所" %>
    <%= form.text_field :detail_address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label "建物名・部屋番号" %>
    <%= form.text_field :building, class: "form-control" %>
  </div>
  <div class="form-group manage_agent_input_box">
    <div class="form-group"><%= form.check_box :apply_org_info %><%= form.label "組織の情報を適用" %></div>
    <div class="form-group"><%= form.check_box :apply_org_bank %><%= form.label "組織の口座を適用" %></div>
    <div class="form-group"><%= form.check_box :has_insurance %><%= form.label "保険に加入している" %></div>
    <div class="form-group"><%= form.check_box :guide_certification %><%= form.label "ガイド認可を保有" %></div>
  </div>
  <div class="form_btns">
    <div class="row">
      <div class="col-half">
        <%= link_to "キャンセル", supplier_path(current_supplier), class: "button btn-cansel" %>
      </div>
      <div class="col-half">
        <%= form.submit('更新する',class: 'button btn-submit') %>
      </div>
    </div>
  </div>
</div>
<!-- </form> -->

<style lang="scss">
  #user_edit_image_upload_btn:hover {
    cursor: pointer;
  }
  .hidden {
    display: none;
  }
  .form-group.manage_agent_input_box {
    display: flex;
    flex-wrap: wrap;
  }
  .form-group.manage_agent_input_box .form-group {
    display: flex;
    align-items: center;
    margin-bottom: 5px;
    width: 46%;
  }
  .form-group.manage_agent_input_box input[type=checkbox] {
    width: 25px;
    height: 30px;
    /* vertical-align: middle; */
  }
</style>

<div class="sign_up_in_page child_position_center">
  <div class="sign_up_in_page_end">
    <h3>Change your password</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group button">
        <%= f.submit "Change my password", class: "button btn-submit" %>
      </div>
    <% end %>
    <div class="another_way_btn_box">
        <%= link_to "Sign in", users_sign_in_path %><br />
    </div>
  </div>
</div>
<style>
  h3 {margin-bottom:40px;}
  form#new_user {
    width: 340px;
  }
</style>

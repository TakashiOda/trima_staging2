<div class="sign_up_in_page">
  <div class="sign_up_in_page_end">
    <h3><%= t("label.user_auth.sign_up")%></h3>
    <%= form_with model: @user, url: user_registration_path(@user), id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-group password">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control invisible" ,id: "password-input", required: true %>
        <div id="password_visible_btn"><i class='fas fa-eye'></i></div>
      </div>
      <div class="form-group agree_check">
        <input type="checkbox" id="agree_checkbox" value="" required>
        <label for="agree_checkbox"><%= t("label.user_auth.agree") if locale.to_s != 'ja'%><%= link_to t("label.user_auth.term"), term_of_service_en_path, class: "agree_link" %><%= t("label.user_auth.and")%><%= link_to t("label.user_auth.privacy_policy"), privacy_policy_en_path, class: "agree_link" %><%= t("label.user_auth.agree") if locale.to_s == 'ja'%></label>
      </div>
      <div class="form-group user login_button">
        <%= f.submit t("label.user_auth.send_verification"), class: "button btn-submit" %>
      </div>
    <% end %>
    <div class="another_way_btn_box">
      <%= link_to t("label.user_auth.sign_in"), users_sign_in_path %>
    </div>
    <div class="didnt_recieve_btn_box">
      <%= link_to t("label.user_auth.dont_recieve_verification"), new_user_confirmation_path %>
    </div>
  </div>
</div>


<script type="text/javascript">
  document.getElementById("password_visible_btn").onclick = function() {
    const pwd = document.getElementById('password-input');
    const pwdClass = pwd.classList.toggle("invisible");
    const pwdIcon = document.getElementById('password_visible_btn');
    if(pwdClass == false){
      pwd.setAttribute('type', 'text');
      pwdIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
    } else {
      pwd.setAttribute('type', 'password');
      pwdIcon.innerHTML = '<i class="fas fa-eye"></i>';
    }
  };
</script>

    margin-bottom: 20px;
  }
  .activity_business_info_item_card {
    background: #fff;
    padding: 20px 30px;
    border-radius: 8px;
    box-shadow: rgba(0, 0, 0, 0.16) 0px 2px 8px !important;
    height: 130px;
  }
  .link_disable {
    opacity: 0.5;
  }
  .activity_business_info_item_title {
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .activity_business_info_item_title .title_front{
    font-size: 21px;
    color: #626262;
    font-weight: bold;
    display: flex;
    align-items: center;
  }
  .activity_business_info_item_title svg {
    color: #35a4bf;
    width: 50px !important;
    height: 35px;
  }
  .title_back {
    /* width: 30%; */
    display: flex;
    justify-content: flex-end;
  }

  .title_back svg {
      margin: 0;
      display: flex;
      width: 30px !important;
      height: 30px;
      color: #74d574;
  }
  span.not_input_mark {
    background: #ff9898;
    padding: 0px 15px;
    border-radius: 30px;
    color: #ffffff;
    font-size: 15px;
    height: 30px;
    line-height: 30px;
    font-weight: bold;
  }
  .gap_title {
    display: flex;
    align-items: center; /* 垂直中心 */
    justify-content: center; /* 水平中心 */
    margin-bottom: 20px;
    color:#b3b3b3;
    font-weight: bold;
  }
  .gap_title:before, .gap_title:after {
    border-top: 3px solid;
    content: "";
    width: 30%; /* 線の長さ */
    color:#b3b3b3;
  }
  .gap_title:before {
    margin-right: 1em; /* 文字の右隣 */
  }
  .gap_title:after {
    margin-left: 1em; /* 文字の左隣 */
  }
  ul.supplier_show_guide_images {
    /* height: 100%; */
    margin: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  img.supplier_show_guide_image {
    height: 70px;
    border-radius: 50%;
    margin-right: 10px;
  }
  .user_show_content table td {
    font-size: 14px;
    color: #6e6e6e;
  }


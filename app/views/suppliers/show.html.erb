    margin-right: 1em; /* 文字の右隣 */
  }
  .gap_title:after {
    margin-left: 1em; /* 文字の左隣 */
  }
  ul.supplier_show_guide_images {
    /* height: 100%; */
    margin: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  img.supplier_show_guide_image {
    height: 70px;
    border-radius: 50%;
    margin-right: 10px;
  }
  .user_show_content table td {
    font-size: 14px;
    color: #6e6e6e;
  }
  li.help_modal_li {
    margin-bottom: 25px;
  }
  .flow_title {
    display: flex;
    align-items: center;
  }
  span.flow_title_num {
    display: flex;
    font-size: 25px;
    background: #60c9e2;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-weight: bold;
  }
  span.flow_title_text {
    font-size: 20px;
    margin-left: 15px;
    color: #6f6f6f;
    font-weight: bold;
  }
  .flow_explanation {
    padding-left: 55px;
  }

</style>

<script type="text/javascript">
  function showHelp() {
    const modal = document.getElementById('help_modal');
    modal.classList.remove('hidden');
  }
  function closeHelp() {
    const modal = document.getElementById('help_modal');
    modal.classList.add('hidden');
  }
</script>

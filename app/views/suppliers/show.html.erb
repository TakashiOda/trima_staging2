    <!-- </div> -->
      <div id="supplier_info_contents">
        <% if @supplier_profile.nil? %>
          <div class="info_list_box_contents">
            <div>契約者情報を入力してください</div>
          </div>
        <% else %>
          <div class="info_list_box_contents">
            <table class="info_list_table">
              <tr>
                <th class="supplier_show_info_title">ご契約社名</th>
                <td><%= @supplier.name if @supplier.name %></td>
              </tr>
              <tr>
                <th class="supplier_show_info_title">代表者名</th>
                <td><%= @supplier_profile.representative_name if !@supplier_profile.nil? %></td>
              </tr>
              <tr>
                <th class="supplier_show_info_title">ご契約住所</th>
                <td>
                  <%= "〒#{@supplier_profile.post_code[0,3]}-#{@supplier_profile.post_code[3,4]}" if !@supplier_profile.nil? %>
                  <%= @supplier_profile.prefecture if !@supplier_profile.nil? %>
                  <%= @supplier_profile.town if !@supplier_profile.nil? %>
                  <%= @supplier_profile.detail_address if @supplier_profile.detail_address %>
                  <%= @supplier_profile.building if @supplier_profile.building %>
                </td>
              </tr>
              <tr>
                <th class="supplier_show_info_title">お電話番号</th>
                <td>
                  <% if @supplier_profile.phone && @supplier_profile.phone.length == 10 %>
                    <%= "#{@supplier_profile.phone[0,3]}-❇︎❇︎❇︎-#{@supplier_profile.phone[6,4]}" %>
                  <% elsif @supplier_profile.phone && @supplier_profile.phone.length == 11 %>
                    <%= "#{@supplier_profile.phone[0,3]}-❇︎❇︎❇︎❇︎-#{@supplier_profile.phone[7,4]}" %>
                  <% end %>
                </td>
              </tr>
            </table>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="gap_with_border">
    <div class="gap_title">
      以下はユーザーに表示される情報です
    </div>
  </div>
  <div class="activity_business_info_items">
    <div class="activity_business_info_item">
      <% if !@activity_business.nil? %>
        <%= link_to edit_supplier_activity_business_path(current_supplier, @activity_business) do %>
        <div class="activity_business_info_item_card">
          <div class="activity_business_info_item_title">
            <div class="title_front">
              <i class="fas fa-address-card"></i>体験事業のプロフィール<span class="arrow_right"><i class="fas fa-chevron-right"></i></span>
            </div>
            <div class="title_back">
              <% if @activity_business.profile_image.blank? || @activity_business.name.nil? || @activity_business.profile_text.nil? %>
                <span class="not_input_mark">未入力あり</span>
              <% else %>
                <i class="fas fa-check-circle"></i>
              <% end %>
            </div>
          </div>
          <table>
            <tr>
              <th class="supplier_show_info_title">事業名</th>
              <td><%= @activity_business.name ? @activity_business.name : "登録されていません" %></td>
            </tr>
            <tr>
              <th class="supplier_show_info_title">紹介文</th>
              <td><%= @activity_business.profile_text ? @activity_business.profile_text : "登録されていません" %></td>
            </tr>
          </table>
        </div>
        <% end %>
      <% else %>
        <div class="activity_business_info_item_card link_disable">
          <div class="activity_business_info_item_title">
            <div class="title_front">
              <i class="fas fa-address-card"></i>体験事業のプロフィール<span class="arrow_right"><i class="fas fa-chevron-right"></i></span>
            </div>
            <div class="title_back">
              <span class="not_input_mark">未入力あり</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="activity_business_info_item">
      <% if !@activity_business.nil? %>
        <%= link_to supplier_activity_business_edit_guides_path(current_supplier, @activity_business) do %>
        <div class="activity_business_info_item_card">
          <div class="activity_business_info_item_title">
            <div class="title_front">
              <i class="fas fa-users"></i>ガイド情報<span class="arrow_right"><i class="fas fa-chevron-right"></i></span>
            </div>
            <div class="title_back">
              <% if @guides.any? %>
                <i class="fas fa-check-circle"></i>
              <% else %>
                <span class="not_input_mark">未入力あり</span>
              <% end %>
            </div>
          </div>
          <% if @guides.any? %>
          <ul class="supplier_show_guide_images">
            <% @guides.each do |guide| %>
              <%= image_tag guide.avatar.to_s, class: 'supplier_show_guide_image' %>
            <% end %>
          </ul>
          <% end %>
        </div>
        <% end %>
      <% else %>
        <div class="activity_business_info_item_card link_disable">
          <div class="activity_business_info_item_title">
            <div class="title_front">
              <i class="fas fa-users"></i>ガイド情報<span class="arrow_right"><i class="fas fa-chevron-right"></i></span>
            </div>
            <div class="title_back">
              <span class="not_input_mark">未入力あり</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="activity_business_info_item">
      <% if !@activity_business.nil? %>
        <%= link_to supplier_activity_business_edit_cansel_path(current_supplier, @activity_business) do %>
        <div class="activity_business_info_item_card">
          <div class="activity_business_info_item_title">
            <div class="title_front">
              <i class="fas fa-ban"></i>キャンセル設定<span class="arrow_right"><i class="fas fa-chevron-right"></i></span>
            </div>
            <div class="title_back">
              <% if @activity_business.cansel_input_done == true %>
                <i class="fas fa-check-circle"></i>
              <% else %>
                <span class="not_input_mark">未設定</span>
              <% end %>
            </div>
          </div>
          <% if @activity_business.cansel_input_done == true %>
            <table>
              <tr>
                <th class="supplier_show_info_title">キャンセル期限</th>
                <td>
                  <% if @activity_business.no_charge_cansel_before == "the_day_before" %>
                    前日までキャンセル無料
                  <% elsif @activity_business.no_charge_cansel_before == "three_days_before"%>
                    ３日前までキャンセル無料
                  <% else %>
                    １週間前までキャンセル無料
                  <% end %>
                </td>
              </tr>
            </table>
          <% end %>
        </div>
        <% end %>
      <% else %>
        <div class="activity_business_info_item_card link_disable">
          <div class="activity_business_info_item_title">
            <div class="title_front">
              <i class="fas fa-ban"></i>キャンセル設定<span class="arrow_right"><i class="fas fa-chevron-right"></i></span>
            </div>
            <div class="title_back">
              <span class="not_input_mark">未入力あり</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="activity_business_info_item">
      <% if !@activity_business.nil? %>
        <%= link_to supplier_activity_business_edit_insurance_path(current_supplier, @activity_business) do %>
        <div class="activity_business_info_item_card">
          <div class="activity_business_info_item_title">
            <div class="title_front">
              <i class="fas fa-shield-alt"></i>加入保険の情報<span class="arrow_right"><i class="fas fa-chevron-right"></i></span>
            </div>
            <% if @activity_business.has_insurance && @activity_business.insurance_image.blank?%>
              <div class="title_back">
                <span class="not_input_mark">未入力あり</span>
              </div>
            <% end %>
            <div class="title_back">
              <% if @activity_business.insurance_input_done == true %>
                <i class="fas fa-check-circle"></i>
              <% elsif @activity_business.has_insurance && @activity_business.insurance_image.blank?%>
                <span class="not_input_mark">未入力あり</span>
              <% else %>
                <span class="not_input_mark">未設定</span>
              <% end %>
            </div>
          </div>
          <% if @activity_business.insurance_input_done == true %>
            <table>
              <tr>
                <th class="supplier_show_info_title">保険加入</th>
                <td><%= @activity_business.has_insurance ? "加入している" : "加入なし" %></td>
              </tr>
              <% if @activity_business.has_insurance %>
              <tr>
                <th class="supplier_show_info_title">保険証書</th>
                <td><%= @activity_business.insurance_image.blank? ? "未アップロード" : "アップロード済" %></td>
              </tr>
              <% end %>
          </table>
          <% end %>
        </div>
        <% end %>
      <% else %>
        <div class="activity_business_info_item_card link_disable">
          <div class="activity_business_info_item_title">
            <div class="title_front">
              <i class="fas fa-shield-alt"></i>加入保険の情報<span class="arrow_right"><i class="fas fa-chevron-right"></i></span>
            </div>
            <div class="title_back">
              <span class="not_input_mark">未入力あり</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style lang="scss">
  .info_list_box_title_inner {
    display: flex;
  }
  .activity_business_status {
    padding: 4px 20px;
    font-size: 16px;
    color: #fff;
    margin-left: 15px;
    border-radius: 40px;

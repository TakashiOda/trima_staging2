    display: flex;
    position: relative;
  }
  div#help_modal {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    padding: 10%;
    background: rgba(47,47,47,0.6);
  }
  .help_modal_inner {
    width: 100%;
    background: #fff;
    border-radius: 15px;
    padding: 20px 40px;
    position: relative;
  }
  .title {
    font-size: 22px;
    font-weight: bold;
    color: gray;
    margin-bottom: 20px;
  }
  .closeBtn {
    width: 60px;
    height: 60px;
    border: solid 3px gray;
    background: #cbcbcb;
    border-radius: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: -15px;
    right: -20px;
  }
  .closeBtn svg {
    width: 45px !important;
    height: 45px;
    margin: 0 !important;
  }
  .closeBtn:hover {
    cursor: pointer;
    background: #e2e2e2;
  }
  .supplier_show_approve_box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    padding: 10px 20px;
    border-radius: 10px;
  }
  .status_title {
    font-size: 18px;
    font-weight: bold;
    color: gray;
  }
  .status {
    background: gray;
    color: #fff;
    padding: 5px 15px;
    border-radius: 20px;
    margin-left: 15px;
  }
  a.approve_btn {
    background: #5ec8e1;
    color: #fff;
    padding: 5px 15px;
    border-radius: 20px;
    margin-left: 20px;
  }
  .done {
    background: #47d23e;
  }
  .wait {
    background: #ff9292;
  }
  .activity_business_info_contents {
    display: flex;
    justify-content: space-between;
  }
  .activity_business_info_items {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .activity_business_info_item {
    width: 49%;
    /* padding: 10px; */
    margin-bottom: 20px;
  }
  .activity_business_info_item_card {
    background: #fff;
    padding: 20px 30px;
    border-radius: 8px;
    box-shadow: rgba(0, 0, 0, 0.16) 0px 2px 8px !important;
    height: 130px;
  }
  .link_disable {
    opacity: 0.5;
  }
  .activity_business_info_item_title {
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .activity_business_info_item_title .title_front{
    font-size: 21px;
    color: #626262;
    font-weight: bold;
    display: flex;
    align-items: center;
  }
  .activity_business_info_item_title svg {
    color: #35a4bf;
    width: 50px !important;
    height: 35px;
  }
  .title_back {
    /* width: 30%; */
    display: flex;
    justify-content: flex-end;
  }

  .title_back svg {
      margin: 0;
      display: flex;
      width: 30px !important;
      height: 30px;
      color: #74d574;
  }
  span.not_input_mark {
    background: #ff9898;
    padding: 0px 15px;
    border-radius: 30px;
    color: #ffffff;
    font-size: 15px;
    height: 30px;
    line-height: 30px;
    font-weight: bold;
  }
  .gap_title {
    display: flex;
    align-items: center; /* 垂直中心 */
    justify-content: center; /* 水平中心 */
    margin-bottom: 20px;
    color:#b3b3b3;
    font-weight: bold;
  }
  .gap_title:before, .gap_title:after {

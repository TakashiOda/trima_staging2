  <% else %>
    <li>
      <i class="fas fa-suitcase"></i>
      <% if !ActivityBusiness.find_by(supplier_id:current_supplier.id).nil? %>
        <%= link_to "体験事業", supplier_activities_path(current_supplier.id) %>
      <% else %>
        <%= link_to "体験事業", supplier_path(current_supplier) %>
      <% end %>
    </li>
  <% end %>
  <li><i class="far fa-bookmark"></i><%= link_to "予約一覧", "#" %></li>

<ul>
  <% if controller_name == 'suppliers' && action_name == 'dashboard' %>
    <li class="selected_menu_item">
      <i class="far fa-bookmark"></i>
      <%= link_to "ダッシュボード", supplier_dashboard_path(current_supplier) %>
    </li>
  <% else %>
    <li>
      <i class="far fa-bookmark"></i>
      <%= link_to "ダッシュボード", supplier_dashboard_path(current_supplier) %>
    </li>
  <% end %>
  <% if controller_name == 'activities' %>
    <li class="selected_menu_item">
      <i class="fas fa-suitcase"></i>

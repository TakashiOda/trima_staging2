      <li>
        <i class="fas fa-suitcase"></i>
        <%= link_to "アカウント情報", supplier_path(current_supplier) %>
      </li>
    <% end %>
  <% else %>
    <li>
      <i class="fas fa-suitcase"></i>
      <%= link_to "アカウント情報", supplier_path(current_supplier) %>
    </li>

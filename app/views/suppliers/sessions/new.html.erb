<%= stylesheet_link_tag 'suppliers' %>
<div class="row sign_up_in_page">
  <div class="col sign_up_in_page_end">
    <h3>事業者ログイン</h3>
    <%= form_for(resource, as: resource_name, url: supplier_session_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-group password">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control invisible" ,id: "password-input", required: true %>
        <div id="password_visible_btn"><i class='fas fa-eye'></i></div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="remember_me_field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <%#= f.label :remember_me, :ログイン状態を保つ %>
        </div>
      <% end %>

      <div class="form-group supplier login_button">
        <%= f.submit "ログイン", class: "button btn-submit" %>
      </div>
    <% end %>
    <div class="another_way_btn_box">
      <%= link_to "事業者アカウント作成", new_supplier_registration_path %>
    </div>
    <div class="didnt_recieve_btn_box">
      <%= link_to "パスワードを忘れた方", new_supplier_password_path %>
      <%= link_to "パスワードを複数回間違えた方", new_supplier_unlock_path %>
    </div>
  </div>
</div>

<style lan="scss">
  .sign_up_in_page_front {
    position: relative;
    background: linear-gradient(to right, #2193b0, #58c1db) !important;
    padding: 40px 60px;
  }
  img.supplier_login_icon {
    width: 200px;
  }
  .didnt_recieve_btn_box a {
    display: flex;
    color: #48aada;
    font-size: 13px;
    justify-content: center;
  }
  .col.sign_up_in_page_end h3 {
    color: #888888;
    font-weight: initial;
    font-size: 19px;
  }
  .form-group.password {
    margin-bottom: 16px;
  }
  .another_way_btn_box {
      padding: 16px 24px;
      border: solid 2px #2193b0;
      border-radius: 10px;
  }

  .another_way_btn_box a {
      display: block;
      color: #2193b0;
  }

</style>

<script type="text/javascript">
  document.getElementById("password_visible_btn").onclick = function() {
    const pwd = document.getElementById('password-input');
    const pwdClass = pwd.classList.toggle("invisible");
    const pwdIcon = document.getElementById('password_visible_btn');
    if(pwdClass == false){
      pwd.setAttribute('type', 'text');
      pwdIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
    } else {
      pwd.setAttribute('type', 'password');
      pwdIcon.innerHTML = '<i class="fas fa-eye"></i>';
    }
  };
</script>

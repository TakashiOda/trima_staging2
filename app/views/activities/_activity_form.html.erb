<!-- <form> -->
<div class="user_show_info_items_box">
  <div class="form-group">
    <%= form.label "体験名" %>
    <%= form.text_field :name, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label "体験の紹介文" %>
    <%= form.text_area :description, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label "体験のメイン写真" %>
    <%= form.file_field :main_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-half">
        <%= form.label "体験カテゴリー" %>
        <%= form.collection_select :activity_category_id, ActivityCategory.all, :id, :jp_name,{prompt: "カテゴリーを選択"}, required: true, class: "form-control" %>
      </div>
      <div class="col-half">
        <%= form.label "参加できる最低年齢" %>
        <%= form.text_field :available_age, required: true, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-half">
        <%= form.label "最大人数" %>
        <%= form.text_field :maximum_num, required: true, class: "form-control" %>
      </div>
      <div class="col-half">
        <%= form.label "最小人数" %>
        <%= form.text_field :minimum_num, required: true, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= form.label "実施シーズン" %>
    <div class="manage_agent_input_box">
        <div class="form-group"><%= form.check_box :january %><%= form.label "1月" %></div>
        <div class="form-group"><%= form.check_box :febrary %><%= form.label "2月" %></div>
        <div class="form-group"><%= form.check_box :march %><%= form.label "3月" %></div>
        <div class="form-group"><%= form.check_box :april %><%= form.label "4月" %></div>
        <div class="form-group"><%= form.check_box :may %><%= form.label "5月" %></div>
        <div class="form-group"><%= form.check_box :june %><%= form.label "6月" %></div>
        <div class="form-group"><%= form.check_box :july %><%= form.label "7月" %></div>
        <div class="form-group"><%= form.check_box :august %><%= form.label "8月" %></div>
        <div class="form-group"><%= form.check_box :september %><%= form.label "9月" %></div>
        <div class="form-group"><%= form.check_box :october %><%= form.label "10月" %></div>
        <div class="form-group"><%= form.check_box :november %><%= form.label "11月" %></div>
        <div class="form-group"><%= form.check_box :december %><%= form.label "12月" %></div>
    </div>
  </div>
  <div class="form_btns">
    <div class="row">
      <div class="col-half">
        <%= link_to "キャンセル", supplier_path(current_supplier), class: "button btn-cansel" %>
      </div>
      <div class="col-half">
        <%= form.submit('更新する',class: 'button btn-submit') %>
      </div>
    </div>
  </div>
</div>
<!-- </form> -->

<style lang="scss">
  #user_edit_image_upload_btn:hover {
    cursor: pointer;
  }
  .hidden {
    display: none;
  }
  .manage_agent_input_box {
    display: flex;
    flex-wrap: wrap;
  }
  .manage_agent_input_box .form-group {
    display: flex;
    align-items: center;
    margin-bottom: 5px;
    width: 25%;
  }
  .manage_agent_input_box input[type=checkbox] {
    width: 25px;
    height: 30px;
    /* vertical-align: middle; */
  }
</style>

<div class="admin_supplier_detail_container">
  <div class="admin_supplier_detail_activity_biz_info_box">
    <% if !@activity.nil? %>
      <table class="supplier_detail_table">
        <tr>
          <td class="table_header" colspan="2">アクティビティ情報</td>
        </tr>
        <tr>
          <td class="table_header" colspan="2">基本情報</td>
        </tr>
        <tr>
          <td class="supplier_detail_table_front">アクティビティ画像</td>
          <td class="supplier_detail_table_back">
              アイコン登録なし
          </td>
        </tr>
        <tr>
          <td class="supplier_detail_table_front">アクティビティ名</td>
          <td class="supplier_detail_table_back">
            <span class="admin_supplier_detail_biz_name_lang">日本語</span><%=@activity.name%>
          </td>
        </tr>
      </table>
    <% else %>
      <table class="supplier_detail_table">
        <tr>
          <td class="table_header" colspan="2">契約者情報</td>
        </tr>
        <tr>
          <td class="" colspan="2">事業者情報がありません</td>
        </tr>
      </table>
    <% end %>
  </div>
</div>

<style lang="scss">
  .admin_supplier_detail_container {
    padding: 20px 30px;
  }
  .admin_supplier_detail_supplier_info_box {
    margin-bottom: 40px;

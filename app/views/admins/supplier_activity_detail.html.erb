  .admin_supplier_detail_activity_biz_info_box {
    margin-bottom: 20px;
  }
  table.supplier_detail_table {
    width: 100%;
  }
  td.table_header {
    background: #93b6d6;
    color: #001552;
    font-weight: bold;
    padding-left: 20px;
  }
  td.supplier_detail_table_front {
    background: #d6d6d6;
    width: 20%;
    text-align: end;
    padding-right: 20px;
    font-size: 12px;
  }
  td.supplier_detail_table_back {
    font-size: 14px;
    padding: 6px 0px 6px 15px;
  }
  /* 事業者 */
  td.supplier_detail_table_back img {
    width: 60px;
  }
  td.supplier_detail_table_back ul {
    margin: 5px 0;
  }
  span.admin_supplier_detail_biz_name_lang {
    background: #cacaca;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 11px;
    width: 40px;
    display: inline-block;
    text-align: center;
  }
  .biz_form_status_toggle_box {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-bottom: 30px;
    width: 100%;
  }
